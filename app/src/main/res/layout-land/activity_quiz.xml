<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".64"
        android:orientation="vertical">

        <ViewFlipper
            android:id="@+id/prepFlipperQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".84"
            android:measureAllChildren="true"></ViewFlipper>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".16">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Footer is here" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".36"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".20"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/score_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".60"
                android:text="Score:" />

            <EditText
                android:id="@+id/score_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".40"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".20"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/correct_answers_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".60"
                android:text="Yayy:" />

            <EditText
                android:id="@+id/correct_answers_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".40"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".20"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/wrong_attempts_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".60"
                android:text="Oops:" />

            <EditText
                android:id="@+id/wrong_attempts_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".40"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".30"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sound_btn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_weight=".50"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/sound" />

            <ImageView
                android:id="@+id/next_btn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_weight=".50"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/next" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
