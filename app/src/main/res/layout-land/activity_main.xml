<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmayekplayland"
    tools:context="com.itservz.android.mayekplay.MainActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. android:background="#0099cc" -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="303dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/fullscreen_content"
            android:layout_width="387dp"
            android:layout_height="0dp"
            android:layout_weight=".40"
            android:gravity="center"
            android:keepScreenOn="true"
            android:text="Mayek sanasi :-)"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_gravity="top" />

        <Button
            android:layout_width="154dp"
            android:layout_height="0dp"
            android:layout_weight=".20"
            android:layout_margin="8dp"
            android:clickable="true"
            android:background="#9d9da2"
            android:id="@+id/goToPrep"
            android:text="@string/time_pass"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="154dp"
            android:layout_height="0dp"
            android:layout_weight=".20"
            android:layout_margin="8dp"
            android:clickable="true"
            android:background="#9d9da2"
            android:id="@+id/goToQuiz"
            android:text="@string/quiz"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="154dp"
            android:layout_height="0dp"
            android:layout_weight=".20"
            android:layout_margin="8dp"
            android:clickable="true"
            android:background="#9d9da2"
            android:id="@+id/goToMatch"
            android:text="@string/memory_match"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="right|top">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/dummy_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dummy_button" />

        </LinearLayout>
    </FrameLayout>

</FrameLayout>
