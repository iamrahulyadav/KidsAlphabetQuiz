<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.itservz.android.mayekplay.prep.PrepActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ViewFlipper
                android:id="@+id/prepFlipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:measureAllChildren="false">
            </ViewFlipper>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sound_btn"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/sound" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@android:drawable/ic_dialog_email" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct answers"
                android:id="@+id/correct_answers_label"
                android:layout_weight="1" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/correct_answers_value"
                android:layout_weight="2" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wrong attempts"
                android:id="@+id/wrong_attempts_label"
                android:layout_weight="1" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/wrong_attempts_value"
                android:layout_weight="2" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Footer is here"
            android:id="@+id/editText"
            android:layout_gravity="center_horizontal" />



    </LinearLayout>

</LinearLayout>
