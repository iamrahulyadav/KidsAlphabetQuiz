<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".12">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/banner_ad_unit_id_quiz"></com.google.android.gms.ads.AdView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".64">

        <ViewFlipper
            android:id="@+id/prepFlipperQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:measureAllChildren="true"
            android:layout_gravity="center_vertical|center_horizontal"></ViewFlipper>
    </LinearLayout>

    <include layout="@layout/quiz_counters" />


</LinearLayout>
