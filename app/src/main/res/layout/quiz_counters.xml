<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".14"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sound_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/sound" />

        <TextView
            android:id="@+id/question_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".34"
            android:text="DUMMY"
            android:textColor="#BA4A00"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/progress_quiz_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".26"
            android:text="Progress"
            android:textColor="#BA4A00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/progress_quiz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:textColor="#BA4A00"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".12"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/score_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".23"
            android:text="Score:"
            android:textColor="#BA4A00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".11"
            android:inputType="number"
            android:textColor="#BA4A00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/correct_answers_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".23"
            android:text="Yayy:"
            android:textColor="#BA4A00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/correct_answers_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:inputType="number"
            android:textColor="#BA4A00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wrong_attempts_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".23"
            android:text="Oops:"
            android:textColor="#BA4A00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wrong_attempts_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:inputType="number"
            android:textColor="#BA4A00"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>